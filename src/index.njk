<section id="about" class="section about">
  <div class="container">
    <h2>About</h2>
    <div class="about-content">
      {% if about.profileImage %}<img src="{{ about.profileImage }}" alt="Profile" class="about-image">{% endif %}
      {{ about.bio | safe | nl2br }}
    </div>
    <a href="#" class="back-to-top">&uarr; Back to Top</a>
  </div>
</section>

<section id="journal" class="section journal-teaser">
  <div class="container">
    <h2>Journal</h2>
    <ul class="blog-list">
      {%- for post in collections.journal | head(3) %}
      <li class="blog-entry">
        <a href="{{ post.url }}" class="blog-title">{{ post.data.title }}</a>
        <div class="blog-meta">
          <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
          {%- if post.data.postTags %}
          <span class="blog-tags">
            {%- for postTag in post.data.postTags | head(3) %}
            <a href="/journal/tag/{{ postTag | slugify }}/" class="tag">{{ postTag }}</a>
            {%- endfor %}
          </span>
          {%- endif %}
        </div>
        <p>{{ post.data.excerpt }}</p>
      </li>
      {%- endfor %}
    </ul>
    <a href="/journal/" class="btn btn-secondary">View All Posts</a>
  </div>
</section>

<section id="contact" class="section contact">
  <div class="container">
    <h2>Get in Touch</h2>
    <p>Have a project in mind or just want to say hello? I'd love to hear from you.</p>
    

    <form class="contact-form" action="https://formspree.io/f/xgoovnzv" method="POST">
      <input type="hidden" name="_subject" value="New contact from portfolio site">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required autocomplete="name">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required autocomplete="email">
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>
      <button type="submit" class="btn">Send Message</button>
    </form>
  </div>
</section>
