<section id="projects" class="section work">
  <div class="container">
    <h2>Projects</h2>
    <div class="project-grid">
      {%- for project in collections.work %}
      <article class="project-card">
        <div class="project-image">
          {%- if project.data.featuredImage %}
          <img src="{{ project.data.featuredImage }}" alt="{{ project.data.title }}" loading="lazy">
          {%- else %}
          <div class="project-placeholder" aria-hidden="true">{% if loop.index < 10 %}0{% endif %}{{ loop.index }}</div>
          {%- endif %}
        </div>
        <div class="project-overlay">
          <h3>{{ project.data.title }}</h3>
          <p>{{ project.data.description }}</p>
          {%- if project.data.projectLink %}
          <a href="{{ project.data.projectLink }}" class="project-link" target="_blank" rel="noopener">View Project</a>
          {%- endif %}
        </div>
      </article>
      {%- endfor %}
    </div>
  </div>
</section>

