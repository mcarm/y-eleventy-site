<section id="journal" class="section journal-teaser">
  <div class="container">
    <h2>Journal</h2>
    <ul class="blog-list">
      {%- for post in collections.journal | head(3) %}
      <li class="blog-entry">
        <a href="{{ post.url }}" class="blog-title">{{ post.data.title }}</a>
        <div class="blog-meta">
          <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
          {%- if post.data.postTags %}
          <span class="blog-tags">
            {%- for postTag in post.data.postTags | head(3) %}
            <a href="/journal/tag/{{ postTag | slugify }}/" class="tag">{{ postTag }}</a>
            {%- endfor %}
          </span>
          {%- endif %}
        </div>
        <p>{{ post.data.excerpt }}</p>
      </li>
      {%- endfor %}
    </ul>
    <a href="/journal/" class="btn btn-secondary">View All Posts</a>
  </div>
</section>

